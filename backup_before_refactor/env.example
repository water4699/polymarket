# PredictLab 环境配置示例文件
# 复制此文件为 .env 并填写实际的配置信息

# =================
# API 配置
# =================

# Predict API
PREDICT_API_KEY=your_predict_api_key_here
PREDICT_BASE_URL=https://api.predict.io

# Polymarket API
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_BASE_URL=https://api.polymarket.com

# Dune Analytics
DUNE_API_KEY=your_dune_api_key_here
DUNE_BASE_URL=https://api.dune.com

# 区块链节点 (Infura, Alchemy 等)
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# =================
# 数据库配置
# =================

# PostgreSQL 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=predictlab
POSTGRES_USER=predictlab_user
POSTGRES_PASSWORD=your_postgres_password

# MongoDB 配置
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=predictlab
MONGODB_USER=
MONGODB_PASSWORD=

# =================
# 应用配置
# =================

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/predictlab.log

# 数据处理配置
BATCH_SIZE=1000
MAX_WORKERS=4

# 回测配置
INITIAL_CAPITAL=10000.0
COMMISSION=0.001

# 时间配置
TIMEZONE=UTC
DATA_RETENTION_DAYS=365
